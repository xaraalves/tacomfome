<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".StoreActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_done"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ic_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="455dp"
        android:src="@drawable/ic_delete_forever"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/product_selling_place"
        android:layout_width="362dp"
        android:layout_height="41dp"
        android:hint="Onde podemos te encontrar?"
        android:inputType="text"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="104dp" />

    <EditText
        android:id="@+id/product_title"
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:hint="Nome do Produto"
        android:inputType="text"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <Spinner
        android:id="@+id/product_spinner_selling_period"
        android:layout_width="167dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="181dp" />

    <Spinner
        android:id="@+id/product_spinner_categorie"
        android:layout_width="167dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="181dp" />

    <EditText
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="PreÃ§o"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="273dp" />

</android.support.constraint.ConstraintLayout>

